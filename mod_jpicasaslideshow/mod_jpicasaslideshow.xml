<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.7" client="site" method="upgrade">
    <name>jPicasa Slideshow</name>
    <author>Chris French</author>
    <creationDate>November 2011</creationDate>
    <copyright>Copyleft</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorUrl>http://ammonitenetworks.com</authorUrl>
    <version>1.7.0</version>
    <description>Simple jquery Slideshow from Picasa</description>
    <files>
        <filename module="mod_jpicasaslideshow">mod_jpicasaslideshow.php</filename>
        <filename>mod_jpicasaslideshow.xml</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="mod_jpicasaslideshow_url" type="text" label="Slideshow RSS URL" description="Make Slideshow RSS"/>
                
                <field name="mod_jpicasaslideshow_width" type="text" label="Width of the slideshow" description="Width of the slideshow" />
                <field name="mod_jpicasaslideshow_height" type="text" label="Height of the slideshow" description="Height of the slideshow" />
                   
                <field name="mod_jpicasaslideshow_jquery" type="radio" label="Load jQuery" description="Load jQuery, if you already have it loaded set to No" default="1">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field name="mod_jpicasaslideshow_conn" type="radio" label="Remote File Connection Type" description="Either CURL or simple_xml_load()" default="1">
                    <option value="CURL">CURL</option>
                    <option value="simplexml">simplexml</option>
                </field>
                
            </fieldset>
        </fields>
    </config>
</extension>